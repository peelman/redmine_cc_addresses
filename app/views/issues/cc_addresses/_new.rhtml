<div id="div-cc-addresses">
<% issue.cc_addresses.build %>
<%- form.fields_for :cc_addresses do |cc_address_form| %>
  <p>
    <%= cc_address_form.text_field :mail, :size => 50, :label => l(:field_cc_addresses) %>
  </p>
<%- end %>
</div>
<p>
  <%= link_to_remote l(:label_add_cc_address), :url  => { :controller => :cc_addresses, :action => :new_issue_add_cc }, :html => { :class => 'icon icon-add' } %>
</p>
